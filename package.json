{
  "name": "strawberry-router",
  "version": "0.1.0",
  "description": "Web component based router",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "check": "tsc",
    "docs": "typedoc",
    "lint": "eslint --ignore-path .ignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runarberg/strawberry-router.git"
  },
  "keywords": [
    "router",
    "web-components"
  ],
  "author": "Rúnar Berg Baugsson Sigríðarson <runarberg@zoho.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/runarberg/strawberry-router/issues"
  },
  "homepage": "https://github.com/runarberg/strawberry-router#readme",
  "eslintConfig": {
    "env": {
      "node": false,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": "2020",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:ava/recommended",
      "plugin:import/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "accessor-pairs": "error",
      "array-callback-return": "error",
      "class-methods-use-this": "error",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "grouped-accessor-pairs": "error",
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "no-alert": "error",
      "no-caller": "error",
      "no-console": "warn",
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "no-eval": "error",
      "no-extend-native": "error",
      "no-extra-bind": "error",
      "no-implicit-coercion": "error",
      "no-implied-eval": "error",
      "no-invalid-this": "error",
      "no-labels": "error",
      "no-lone-blocks": "error",
      "no-multi-str": "error",
      "no-new": "error",
      "no-new-func": "error",
      "no-new-wrappers": "error",
      "no-octal-escape": "error",
      "no-param-reassign": "error",
      "no-return-assign": "error",
      "no-return-await": "error",
      "no-script-url": "error",
      "no-self-compare": "error",
      "no-sequences": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "error",
      "no-throw-literal": "error",
      "no-unmodified-loop-condition": "error",
      "no-unused-expressions": "error",
      "no-useless-backreference": "error",
      "no-useless-concat": "error",
      "no-useless-return": "error",
      "no-var": "error",
      "no-void": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "prefer-destructuring": "error",
      "prefer-promise-reject-errors": "error",
      "prefer-template": "error",
      "radix": "error",
      "require-atomic-updates": "error"
    }
  },
  "prettier": {
    "trailingComma": "all"
  },
  "devDependencies": {
    "ava": "^3.9.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-ava": "^10.3.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "2.0.5",
    "typedoc": "^0.17.7"
  },
  "dependencies": {
    "typescript": "^3.9.5"
  }
}
