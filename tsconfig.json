{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.js"
  ],
  "typedocOptions": {
    "mode": "library",
    "inputFiles": ["src/index.js"],
    "entryPoint": "index",
    "out": "docs"
  }
}
